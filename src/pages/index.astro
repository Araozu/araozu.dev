---
import Sidebar from "../components/Sidebar.astro";
import NavigationLayout from "../layouts/NavigationLayout.astro";
import EsBlogIndex from "../components/index/EsBlogIndex.astro";
import EnBlogIndex from "../components/index/EnBlogIndex.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="stylesheet" href="/global.css" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Atkinson+Hyperlegible:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">

        <title>Fernando Araoz</title>
        <link
            rel="stylesheet"
            type="text/css"
            href="https://unpkg.com/@phosphor-icons/web@2.1.1/src/regular/style.css"
        />
        <script src="//unpkg.com/alpinejs" defer></script>
    </head>
    <body>
        <NavigationLayout>
            <div
                class="container mx-auto p-2 lg:grid lg:grid-cols-[20rem_auto] lg:gap-4"
            >
                <Sidebar />
                <div>
                    <EnBlogIndex />
                    <EsBlogIndex />
                </div>
            </div>
        </NavigationLayout>
    </body>
</html>
